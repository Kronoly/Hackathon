{{#if removedProduct}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  Product has been removed.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
  <div class="col-6">
    <h1>Products</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/product/addproduct" type="button" class="btn btn-primary align-self-center">+ add product</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Product name</th>
      <th scope="col">Product code</th>
      <th scope="col">Image</th>
      <th scope="col">Product_manual</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.product_code}}</td>
      <td>{{this.image}}</td>
      <td>{{this.product_manual}}</td>
      <td class="text-end">
        <a href="/product/viewproduct/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
        <a href="/product/editproduct/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>
          Edit</a>
        <a href="/product/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>